extends ../layout

block content

    div#all
      div#add_tender_butt
        a.waves-effect.waves-light.btn-large(href='/tenders/new') Add Tender   
      div#tendersAll           
        if tenders
        for tender in tenders      
          div.col.s12.m7.allTenders
            h3.header#tenders-index= tender.name
            div.card.horizontal
              div.card-image
                  img.boo_img(src='#{tender.picture}' alt='No Image Available')
              div.card-stacked
                div.card-content
                  p.tender_index #{tender.description}
                  p.tender_index #{tender.tender_type}
                div.card-action
                  a(href='/tenders/'+tender.id) Check it out
                      
