extends ../layout

block content
  h1 Create a new Tender here:
  form(action='/tenders', method='post')
    input(type='textarea', name='name', value='', placeholder='Name')
    input(type='textarea', name='description', value='', placeholder='Description')
    select(name='tender_type')
      option(value='default', selected='', disabled='') Type
      option(value='service') Service
      option(value='goods') Goods
    input(type='number', name='user_id', value='#{current_user_id}', placeholder='User Id')
    input#submit_button(type='submit', name='', value='Create New Tender')
